<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodwaste">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddOfferingActivity"
            android:label="@string/title_activity_add_offering"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BusinessLogin"
            android:label="@string/title_activity_business_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BusinessDashboardActivity"
            android:label="@string/title_activity_business_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BusinessListingActivity"
            android:label="@string/title_activity_business_listing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>